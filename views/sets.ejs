<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego sets</title>
    <link rel="stylesheet" href="../public/css/main.css" />
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <!-- Navbar -->
    <%- include('partials/navbar', {page: '/lego/sets'}) %>
    
    <!--Hero-->
    <div class="hero min-h-screen bg-base-200">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-4xl font-bold">Choose your favorite theme</h1>
                <button class="btn btn-primary"><a href="/lego/sets" class="btn-primary">All Themes</a></button>
                <button class="btn btn-primary"><a href="/lego/sets?theme=Supplemental" class="btn-primary">Supplemental</a></button>
                <button class="btn btn-primary"><a href="/lego/sets?theme=Technic" class="btn-primary">Technic</a></button>
                <button class="btn btn-primary"><a href="/lego/sets?theme=System" class="btn-primary">System</a></button>                
            </div>
        </div>
    </div>

    <!-- Table -->
    <table class="min-w-full divide-y divide-gray-200">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Theme</th>
                <th>Year</th>
                <th>Number of Parts</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% sets.forEach(set => { %>
                <tr>
                    <td><img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-10 h-10 rounded-full"></td>
                    <td><%= set.name %></td>
                    <td><a href="/lego/sets?theme=<%= set.Theme.name %>" class="btn"><%= set.Theme.name %></a></td>
                    <td><%= set.year %></td>
                    <td><%= set.num_parts %></td>
                    <td><a href="/lego/sets/<%= set.set_num %>" class="btn">Details</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
